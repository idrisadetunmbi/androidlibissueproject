<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/fragmentA">

    <fragment
        android:id="@+id/fragmentA"
        android:name="com.example.libissueproject.FragmentA"
        android:label="fragment_a"
        tools:layout="@layout/fragment_a" >
        <action
            android:id="@+id/action_fragmentA_to_dialog_fragment"
            app:destination="@id/dialog_fragment" />
        <action
            android:id="@+id/action_fragmentA_to_fragmentB"
            app:destination="@id/fragmentB" />
    </fragment>

    <dialog
        android:id="@+id/dialog_fragment"
        android:name="com.example.libissueproject.DialogFragment"
        android:label="dialog_fragment"
        tools:layout="@layout/fragment_dialog" >
        <action
            android:id="@+id/action_dialog_fragment_to_fragmentB"
            app:destination="@id/fragmentB" />
    </dialog>
    <fragment
        android:id="@+id/fragmentB"
        android:name="com.example.libissueproject.FragmentB"
        android:label="fragment_b"
        tools:layout="@layout/fragment_b" />
</navigation>